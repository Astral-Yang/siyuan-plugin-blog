{
  "name": "siyuan-blog",
  "private": true,
  "scripts": {
    "dev": "pnpm siyuanBuild && pnpm siyuanSync && pnpm pluginDev",
    "build": "pnpm siyuanBuild && pnpm pluginBuild && pnpm siyuanSync",
    "blogDev": "nuxt dev",
    "pluginDev": "zhi-build --watch",
    "pluginBuild": "zhi-build --production",
    "vercelBuild": "BUILD_TYPE=vercel nuxt generate",
    "siyuanBuild": "BUILD_TYPE=siyuan nuxt generate",
    "siyuanSync": "cp -r ./dist/* /Users/terwer/Documents/mydocs/SiYuanWorkspace/public/data/plugins/siyuan-blog",
    "postinstall": "nuxt prepare"
  },
  "devDependencies": {
    "@terwer/esbuild-config-custom": "latest",
    "@terwer/eslint-config-custom": "latest",
    "@types/node": "^18.16.5",
    "nuxt": "^3.4.3",
    "typescript": "^5.0.4"
  },
  "dependencies": {
    "siyuan": "^0.7.1",
    "zhi-device": "^0.5.0"
  }
}
